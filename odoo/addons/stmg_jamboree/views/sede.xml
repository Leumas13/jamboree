<odoo>
  <data>
    <record id="stmg_jamboree.sede_form" model="ir.ui.view">
      <field name="name">stmg_jamboree.sede.form</field>
      <field name="model">stmg_jamboree.sede</field>
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <group>
              <field name="fotografia" widget="image" />
              <field name="name" />
              <field name="nombre" />
              <field name="ciudad_id" />
              <field name="entrenamiento_ids">
                <tree string="Entrenamiento">
                  <field name="name" />
                  <field name="turno" />
                </tree>
              </field>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="stmg_jamboree.sede_tree" model="ir.ui.view">
      <field name="name">stmg_jamboree.sede.tree</field>
      <field name="model">stmg_jamboree.sede</field>
      <field name="arch" type="xml">
        <tree string="">
          <field name="fotografia" widget="image" />
          <field name="name" />
          <field name="nombre" />
          <field name="ciudad_id" />
        </tree>
      </field>
    </record>

    <record id="stmg_jamboree.sede_kanban" model="ir.ui.view">
      <field name="name">stmg_jamboree.sede.kanban</field>
      <field name="model">stmg_jamboree.sede</field>
      <field name="type">kanban</field>
      <field name="arch" type="xml">
        <kanban>
          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_global_click">
                <div class="o_kanban_image">
                  <img
                    t-att-src="kanban_image('stmg_jamboree.sede', 'fotografia', record.id.raw_value)" />
                </div>
                <div class="oe_kanban_details">
                  <ul>
                    <li>Nombre: <field name="nombre" /></li>
                    <li>Entrenamientos: <field name="entrenamiento_ids" /></li>
                  </ul>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

  </data>
</odoo>