<odoo>
  <data>
    <record id="view_tutor_form_inherit" model="ir.ui.view">
        <field name="name">stmg_jamboree.tutor.form.inherit</field>
        <field name="model">stmg_jamboree.tutor</field>
        <field name="inherit_id" ref="base.view_partner_form"/>  <!-- Vista base de res.partner -->
        <field name="arch" type="xml">
            <!-- Agregar el campo 'jugador_ids' al formulario de 'tutor' -->
            <xpath expr="//sheet//group[@name='group_address']" position="after">
                <group>
                    <field name="jugador_ids" widget="many2many_tags" options="{'no_create': True}" placeholder="Selecciona los jugadores"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="view_tutor_tree_inherit" model="ir.ui.view">
      <field name="name">stmg_jamboree.tutor.tree.inherit</field>
      <field name="model">stmg_jamboree.tutor</field>
      <field name="arch" type="xml">
        <tree string="">
          
        </tree>
      </field>
    </record>
  </data>
</odoo>
