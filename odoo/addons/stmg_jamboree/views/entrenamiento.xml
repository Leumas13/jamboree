<odoo>
  <data>
    <record id="stmg_jamboree.entrenamiento_form" model="ir.ui.view">
      <field name="name">stmg_jamboree.entrenamiento.form</field>
      <field name="model">stmg_jamboree.entrenamiento</field>
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <group>
              <field name="name" />
              <field name="tipo" />
              <field name="turno" />
              <field name="sede_id" />
              <group>
              <field name="entrenador_ids">
                <tree string="Entrenadores">
                  <field name="id" />
                  <field name="nombre" />
                  <field name="apellidos" />
                </tree>
              </field>
              <field name="jugador_ids">
                <tree string="Jugadores">
                  <field name="fotografia" />
                  <field name="id" />
                  <field name="nombre" />
                  <field name="apellidos" />
                  <field name="posicion" />
                </tree>
              </field>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="stmg_jamboree.entrenamiento_tree" model="ir.ui.view">
      <field name="name">stmg_jamboree.entrenamiento.tree</field>
      <field name="model">stmg_jamboree.entrenamiento</field>
      <field name="arch" type="xml">
        <tree string="">
          <field name="name" />
          <field name="tipo" />
          <field name="turno" />
        </tree>
      </field>
    </record>


<record id="mbs_instituto.alumno_kanban" model="ir.ui.view">
      <field name="name">Alumnos kanban</field>
      <field name="model">mbs_instituto.alumno</field>
      <field name="arch" type="xml">
        <kanban class="o_kanban_mobile" default_group_by="service_state" group_expand="true">
          <field name="id" />
          <field name="foto" widget="image" class="oe_avatar" />
          <field name="numEstudiante" />
          <field name="name" />
          <field name="apellidos" />
          <field name="repetidor" />
          <field name="media" />
          
          <field name="grupo_nombre" />

          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_global_click">
                <div class="o_kanban_image">
                  <img t-att-src="kanban_image('mbs_instituto.alumno', 'foto', record.id.raw_value)"
                    alt="Image" />
                </div>
                <div class="oe_kanban_details">
                  <div class="o_kanban_record_top">
                    <div class="o_kanban_record_headings">
                      <strong class="o_kanban_record_title oe_partener_heading">
                        <p>
                          <field name="name" /> <field name="apellidos" />
                        </p>
                      </strong>
                        <field name="grupo_nombre"/>
                      <ul>
                        <li>
                          <field name="numEstudiante" /> 
                        </li>
                        <div> Repetidor: <t t-if="record.repetidor.raw_value">
                            <span>SÃ­</span>
                          </t>
                          <t t-else="">
                            <span>No</span>
                          </t>
                        </div>
                        <li>
                          <field name="media" /> 
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

  </data>
</odoo>